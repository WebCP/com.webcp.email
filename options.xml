<?xml version="1.0"?>
<!DOCTYPE data SYSTEM "http://www.woltlab.com/DTDs/options.dtd">
<data>
	<import>
		<categories>
			<category name="cpemail"></category>
			<category name="cpemail.quota">
				<parent>cpemail</parent>
			</category>
			<category name="cpemail.parameters">
				<parent>cpemail</parent>
			</category>
		</categories>

		<options>

		    <option name="mail_quota_enabled">
		        <categoryname>cpemail.quota</categoryname>
		        <optiontype>boolean</optiontype>
		        <defaultvalue>0</defaultvalue>
		    </option>

		    <option name="mail_quota">
		        <categoryname>cpemail.quota</categoryname>
		        <optiontype>integer</optiontype>
		        <defaultvalue>100</defaultvalue>
		    </option>

			<option name="mail_store_plain_password">
				<categoryname>cpemail.parameters</categoryname>
		        <optiontype>boolean</optiontype>
		        <defaultvalue>0</defaultvalue>
			</option>
			<option name="mail_homedir">
				<categoryname>cpemail.parameters</categoryname>
		        <optiontype>text</optiontype>
			</option>
			<option name="mail_uid">
				<categoryname>cpemail.parameters</categoryname>
		        <optiontype>integer</optiontype>
		        <defaultvalue>5000</defaultvalue>
			</option>
			<option name="mail_gid">
				<categoryname>cpemail.parameters</categoryname>
		        <optiontype>integer</optiontype>
		        <defaultvalue>5000</defaultvalue>
			</option>
		</options>
	</import>
</data>